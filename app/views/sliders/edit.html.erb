<h4>Отредактировать слайд:</h4>

<%= form_for @slider, :html => {:multipart => true}, method: :put do |f| %>
	<div class="col-xs-12 col-sm-6 col-md-6 ">
		<div >
			<% if @slider && @slider.errors.any? %>
				<p>
			        <ul>

					<% @slider.errors.full_messages.each do |msg| %>
			          <li><%= msg %></li>
			        <% end %>  
					</ul>
				</p>
			<% end %>
		</div>

  		<div  >
  		 
  		<%= image_tag (@slider.slide.url) %>
  		 
	 	</div>
		
		<div >
		<p>
			<label>Заголовок</label><br />
			<%= f.text_field :title %>
		</p>

	
		<p>
			<label>Описание:</label><br /> 
			<%= f.text_area :description %>
		</p>

		<p>
			<label>Порядковый номер слайда:</label><br /> 
			<%= f.text_field :number %>
		</p>
		</div>
	</div>

	<div class="col-xs-12"> 
	<p>
		<%= f.submit 'отправить' %>
	</p>
	</div>
	

<% end %>
