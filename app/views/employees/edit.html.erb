<h1>Редактирование статьи</h1>

<%= form_for :employee, url: employee_path(@employee), method: :put do |f| %>
	
	<% if @employee && @employee.errors.any? %>
		<p>
        <ul>
				<% @employee.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>  
        </ul>
		</p>
	<% end %>


	<p>
    <label>Фото:</label>
    <%= image_tag (@employee.avatar.url) if @employee.avatar.file.nil? %>  
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %> 
 	</p>
 	
  <p>
		<label>Ф.И.О.:</label><br />
		<%= f.text_field :name %>
	</p>

	<p>
		<label>Деятельность:</label><br /> 
		<%= f.text_area :prof %>
	</p>

	<p>
		<label>Специальность:</label><br />
		<%= f.text_area  :spec %>
	</p>

	<p>
		<label>Образование:</label><br />
		<%= f.text_area  :education %>
	</p>

	<p>
		<label>Доп.Образование:</label><br />
		<%= f.text_area  :addeducation %>
	</p>

	<p>
		<label>Программы:</label><br />
		<%= f.text_area  :programms %>
	</p>
	<p>
		<%= f.submit 'отправить' %>
	</p>
<% end %>