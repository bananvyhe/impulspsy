<h4>Список специалистов:</h4>
<% @employees.each do |employee| %>
<%= image_tag employee.avatar.thumb.url %>
<%= image_tag employee.avatar.medium.url %>
<%= image_tag employee.avatar.big.url %>
	<h2><%= employee.name %></h2>
	<p><%= employee.prof %></p>

<p>
	<%= link_to 'Показать', employee_path(employee) %> |
	<%= link_to 'Редактировать', edit_employee_path(employee) %> |
	<%= link_to 'Удалить', employee_path(employee), method: :delete, data: { confirm: 'Вы уверены?'} %>

	


</p>
<hr>
<% end %>