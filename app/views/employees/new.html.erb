<h1>Свяжитесь с нами</h1>

<%= form_for :employee, url: employees_path do |f| %>
	
	<% if @employee && @employee.errors.any? %>
		<p>
        <ul>

		<% @employee.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>  

        </ul>
		</p>
	<% end %>

 	<p>
		<%= f.label :img %><br />
		<%= f.text_field :img %>
	</p>

	<p>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :spec %><br />
		<%= f.text_area  :spec %>
	</p>

	<p>
		<%= f.label :education %><br />
		<%= f.text_area  :education %>
	</p>

	<p>
		<%= f.label :addeducation %><br />
		<%= f.text_area  :addeducation %>
	</p>

	<p>
		<%= f.label :programms %><br />
		<%= f.text_area  :programms %>
	</p>

	<p>
		<%= f.submit 'отправить' %>
	</p>

<% end %>